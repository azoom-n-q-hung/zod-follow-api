{
  "compilerOptions": {
    /* Visit https://aka.ms/tsconfig to read more about this file */
    "target": "ESNext",
    "module": "ESNext",
    "moduleResolution": "node",
    "baseUrl": "./",
    "paths": {
      "@root/*": ["./*"],
      "@constants/*": ["./constants/*"],
      "@endpoints/*": ["./endpoints/*"],
      "@helpers/*": ["./helpers/*"],
      "@lib/*": ["./lib/*"],
      "@middleware/*": ["./middleware/*"],
      "@routes/*": ["./routes/*"]
    },
    "typeRoots": ["./@types"],
    "outDir": "./dist",
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true
  },
  "exclude": ["lib/zod-follow/dist"]
}
